<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Fragments.Visual_Home">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/purple_700"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/divider8"
                android:layout_width="1dp"
                android:layout_height="120dp"
                android:layout_marginStart="10dp"
                android:background="?android:attr/listDivider"
                android:backgroundTint="@color/white"
                app:layout_constraintStart_toEndOf="@+id/imageView11"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/location"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/stations_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/stations_text"
                android:textColor="@color/white"
                android:textSize="@dimen/h2_text"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/divider8"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/selectedStationName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="@string/select_station_info"
                android:textColor="@color/textOnRedBgColor"
                android:textSize="@dimen/h3_text"
                app:layout_constraintEnd_toStartOf="@+id/add_default"
                app:layout_constraintStart_toStartOf="@+id/stations_text"
                app:layout_constraintTop_toBottomOf="@+id/stations_text" />

            <View
                android:id="@+id/divider933"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:background="?android:attr/listDivider"
                android:backgroundTint="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="13dp"
                android:src="@drawable/ic_baseline_calendar_today_24"
                app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/linearLayout2"
                app:tint="@color/white" />

            <View
                android:id="@+id/divider93"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="1dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="1dp"
                android:background="?android:attr/listDivider"
                android:backgroundTint="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/selectedStationName" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="@+id/selectedStationName"
                app:layout_constraintTop_toBottomOf="@+id/selectedStationName">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/crops_dropdown"
                    style="@style/spinnerCustomColor"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/input_fields_bg"
                    android:backgroundTint="#9CA12A05" />
            </LinearLayout>

            <EditText
                android:id="@+id/date_range"
                android:layout_width="190dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/input_fields_bg"
                android:backgroundTint="#9CA12A05"
                android:ellipsize="end"
                android:focusable="false"
                android:hint="@string/date_range"
                android:inputType="none"
                android:padding="8dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textAlignment="center"
                android:textColor="@color/textOnRedBgColor"
                android:textSize="@dimen/tiny_text"
                android:textStyle="bold"
                app:hintTextColor="#ffffff"
                app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
